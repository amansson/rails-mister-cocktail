<%= @cocktail.name %>

<% @cocktail.doses.each do |dose|  %>
  <p>
    <%= dose.ingredient.name %>
    <%= dose.description %>
    <%= link_to 'Remove', dose_path(dose), :method => :delete %>
  </p>
<% end %>


<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient, as: :radio_buttons %>
  <%= f.button :submit %>
<% end %>